{
  "compilerOptions": {
      "baseUrl": ".",
      "module": "CommonJS",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "paths": {
          "@/*": [
              "src/*"
          ]
      },
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "esModuleInterop": true
  },
  "include": [
      ".config/**/*.ts",
      "migrations/**/*.ts",
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "typeRoots": [
      "src/.config",
      "node_modules/@types"
  ]
}